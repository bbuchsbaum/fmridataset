    if (isTRUE(mo$voxelwise_detrend)) preprocessing <- c(preprocessing, "voxelwise detrend")
    
    if (length(preprocessing) > 0) {
      cat("   Preprocessing:", paste(preprocessing, collapse = ", "), "\n")
    } else {
      cat("   Preprocessing: None\n")
